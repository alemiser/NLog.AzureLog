<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog"
               type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>    
  <nlog throwExceptions="true" internalLogFile="c:\Nlog.log" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
      <extensions>
        <add assembly="NLog.AzureLog" />
      </extensions>

      <targets>
        <target name="Azure" xsi:type="Azure" CustomerId="81ff4d45-9813-437d-abb8-1e4e7643b943" SharedKey="x3AMXtZsRCXKs2siqejdWGoT0JcmeYOAk0z5usCMmFaIz35Q03fGr5nELtqteOrYEwUVQfFfqiM3usVKFoiAog==" LogName="API_STAGE">
          <layout xsi:type="JsonLayout">
            <attribute name="machine" layout="${machinename}" />
            <attribute name="time" layout="${longdate}" />
            <attribute name="level" layout="${level:upperCase=true}"/>
            <attribute name="message" layout="${message}" />
          </layout>
        </target>
      </targets>
      <rules>
        <logger name="*" minLevel="Debug" writeTo="Azure"/>
      </rules>
    </nlog>
</configuration>
